---
import Layout from "../../layouts/Layout.astro";

export const prerender = false;
const { url } = Astro;

// Get error message from URL parameter, or use default message
const errorMessage = url.searchParams.get("error") || "Authentication failed. Please try again or contact support if the problem persists.";
---

<Layout title="Confirm Email">
  <div class="flex flex-col items-center justify-center flex-1">
    <div class="border border-gray-200 p-8 rounded-md">
      <h1 class="text-xl font-bold mb-2">Error</h1>
      <p class="text-sm">
        {errorMessage}
      </p>
    </div>
  </div>
</Layout>
